# Database Configuration
# PostgreSQL connection string for Drizzle ORM
DATABASE_URL="postgresql://svelteship:svelteship@localhost:5432/svelteship"

# Application Environment
# Set to "production" in production deployments
NODE_ENV="development"

# Optional: Custom port for development server
# PORT=5173

# ===========================================
# OAuth Configuration (Optional)
# ===========================================

# Google OAuth
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:5173/oauth/google/callback"

# GitHub OAuth
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GITHUB_REDIRECT_URI="http://localhost:5173/oauth/github/callback"

# ===========================================
# Email Service Configuration (Optional)
# ===========================================

# Email Provider: "resend" or "console" (default: console for development)
EMAIL_PROVIDER="console"

# Resend API Key (required if EMAIL_PROVIDER="resend")
# Get API key at: https://resend.com/api-keys
RESEND_API_KEY=""

# From email address for outgoing emails
EMAIL_FROM="noreply@example.com"

# ===========================================
# File Storage Configuration (Optional)
# ===========================================

# Storage Provider: "local", "s3", or "r2" (default: local)
STORAGE_PROVIDER="local"

# AWS S3 Configuration (required if STORAGE_PROVIDER="s3")
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Cloudflare R2 Configuration (required if STORAGE_PROVIDER="r2")
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_ENDPOINT=""
R2_BUCKET=""

# ===========================================
# Analytics Configuration (Optional)
# ===========================================

# Analytics Provider: "plausible", "umami", "google", or "custom"
ANALYTICS_PROVIDER=""

# Google Analytics Tracking ID
GOOGLE_ANALYTICS_ID=""

# Plausible Domain
PLAUSIBLE_DOMAIN=""

# Umami Configuration
UMAMI_WEBSITE_ID=""
UMAMI_ENDPOINT=""

# Custom Analytics Endpoint
CUSTOM_ANALYTICS_ENDPOINT=""

# ===========================================
# Logging Configuration (Optional)
# ===========================================

# Log Level: "debug", "info", "warn", "error" (default: info)
LOG_LEVEL="info"

# Sentry DSN for error tracking (optional)
SENTRY_DSN=""
