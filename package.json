    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "drizzle-orm": "^0.45.1",
    "lucia": "^3.2.2",
    "postgres": "^3.4.7"
  }
